# Move dirs
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Shorter commands
alias h=history
alias e=$EDITOR

# Don't show groups on long listing
alias ll='ls -lG --color'     # long listing
alias la='ls -lGa --color'    #              with hidden
alias lt='ls -ltG --color'    #              sorted by latest changed

# grep with color
alias grep='grep --color'

# reload
alias reload='. ~/.bashrc'

# File sizes for current directory
alias ducks='du -cksh *' 

# Show most commonly used commands
alias profileme="history | awk '{print \$2}' | awk 'BEGIN{FS=\"|\"}{print \$1}' | sort | uniq -c | sort -n | tail -n 20 | sort -nr"

# Search and replace
alias rsar="ruby ~/.dotfiles/bash/scripts/search_and_replace.rb "

# tmux with 256 colors
alias tmux="TERM=screen-256color-bce tmux"

# Ruby aliases
alias be="bundle exec "
alias bers="bundle exec rspec "
alias bera="bundle exec rake "

# Netflix DNS hackery
alias uk_netflix="sudo sh ~/.dotfiles/bash/scripts/uk_netflix"
alias us_netflix="sudo sh ~/.dotfiles/bash/scripts/us_netflix"

alias pretty_path="sh ~/.dotfiles/bash/scripts/pretty_path"
