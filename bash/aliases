# Move dirs
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Shorter commands
alias h=history
alias e=$EDITOR

# Don't show groups on long listing
alias ll='ls -lG --color'     # long listing
alias la='ls -lGa --color'    #              with hidden
alias lt='ls -ltG --color'    #              sorted by latest changed

# grep with color
alias grep='grep --color'

# reload
alias reload='. ~/.bashrc'

# File size
alias fs="du -sh"
